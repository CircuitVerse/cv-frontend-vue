{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CircuitVerse",
  "version": "0.0.1",
  "identifier": "org.circuitVerse.simulator",
  "build": {
    "frontendDist": "../dist/simulatorvue/v0",
    "devUrl": "http://localhost:4000/",
    "beforeDevCommand": "npx cross-env DESKTOP_MODE=1 npm run dev",
    "beforeBuildCommand": "npx cross-env DESKTOP_MODE=1 npm run build -- v0"
  },
  "app": {
    "windows": [
      {
        "title": "CircuitVerse",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
